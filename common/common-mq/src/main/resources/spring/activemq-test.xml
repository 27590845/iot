<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">
    <description>Spring消息队列配置 </description>

    <bean id="jmsFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <property name="brokerURL">
            <value>failover:(tcp://activemq1:61616?wireFormat.maxInactivityDuration=0)?maxReconnectDelay=1000</value>
        </property>
        <property name="useAsyncSend">
            <value>true</value>
        </property>
    </bean>

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsFactory" />
        <property name="pubSubDomain" value="true" />
    </bean>

    <bean id="jmsSender" class="com.xidian.iot.common.mq.JmsSender">
        <property name="jmsTemplate" ref="jmsTemplate"/>
    </bean>

    <bean id="jmsSubscriber" class="com.xidian.iot.common.mq.JmsSubscriber">
        <property name="jmsTemplate" ref="jmsTemplate"/>
    </bean>

</beans>